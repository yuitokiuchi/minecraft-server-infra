# cp terraform.tfvars.example terraform.tfvars

region                   = "ap-northeast-1"
project_name             = "mc-infra"
environment              = "production"
vpc_cidr                 = "10.0.0.0/16"
vpc_enable_dns_hostnames = true
vpc_enable_dns_support   = true
enable_ipv6              = true
public_subnet_cidr       = "10.0.1.0/24"
public_subnet_ipv6_cidr  = "00::/64"
allowed_ssh_cidr         = "0.0.0.0/0" 
allowed_ssh_ipv6_cidr    = "::/0"

common_tags = {
  Project     = "mc-infra"
  Environment = "production"
  ManagedBy   = "Terraform"
  CreatedDate = "2025-10-16"
}

# ============================================
# EBS Volume Configuration
# ============================================

# SMP (Survival Multi Play) Server
ebs_smp_size       = 6
ebs_smp_type       = "gp3"
ebs_smp_iops       = 3000
ebs_smp_throughput = 125

# Proxy (Velocity) Server
ebs_proxy_size       = 2
ebs_proxy_type       = "gp3"
ebs_proxy_iops       = 3000
ebs_proxy_throughput = 125

# Common EBS Settings
ebs_encryption_enabled  = false
ebs_deletion_protection = true  # Prevent accidental deletion
